<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about_us"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/colorBackground"
    tools:context="in.gov.bihar.sfc.biharepds.activity.AboutUsActivity">

     <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:isScrollContainer="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/about_us_title_bsfc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="@string/about_us_sfc_title"
                android:textSize="18dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/about_us_logo_sfc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/about_us_title_bsfc"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:src="@drawable/sfc_logo" />

            <TextView
                android:id="@+id/about_us_desc_bsfc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/about_us_logo_sfc"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="@string/about_us_sfc_desc"
                android:textSize="15dp" />


        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/about_us"/>
    </RelativeLayout>
</RelativeLayout>